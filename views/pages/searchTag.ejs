<% layout('layout') %>
<div class="tags addTagLink center_div">
    <form class="input-group" method="post" action="/search/tag">
        <select class="custom-select" id="search" name="search">
            <option selected>select a tag</option>
            <% if (locals.tags != undefined){ %>
            <% for(let i=0; i<locals.tags.length; i++){ %>
            <option value="<%= locals.tags[i].id_tag %>"><%= locals.tags[i].libelle_tag %></option>
            <% } %>
            <% } %>
        </select>
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>

</div>



<div class="list-group">
    <% if(locals.channels != undefined) { %>
        <% locals.channels.forEach(function(channel) { %>

        <a href="/channel/<%= channel.channelId %>" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="row">
                <img class="col-xl-2 col-md-4" src="<%= channel.thumbnail %>"> </img>
                <div class="col-xl-10 col-md-8">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"> <%= channel.title %> </h5>


                    </div>
                    <p class="mb-1"> <%= channel.description %> </p>

                </div>
            </div>
        </a>
        <% }) %>
    <% } %>
</div>