<% layout('layout') %>
<div class="list-group center_div_channel">
    <div class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="row">
        <img class="col-xl-2 col-md-4" src="<%= channel.thumbnail %>"> </img>
        <div class="col-xl-10 col-md-8">
            <div class="d-flex w-100 justify-content-between">
                <a href="https://www.youtube.com/channel/<%= locals.channel.channelId %>"><h5 class="mb-1"> <%= channel.title %> </h5></a>
            </div>
            <p class="mb-1"> <%= channel.description %> </p>
            <div class="row">
                <h5 class="text-muted"><span class="badge badge-primary">tag1</span></h5>
                <h5 class="text-muted"><span class="badge badge-primary">tag2</span></h5>
                <h5 class="text-muted"><span class="badge badge-primary">tag3</span></h5>
            </div>

        </div>
    </div>
    </div>
</div>

<div class="center_div_channel tags"></div>


<% if( locals.authenticated ){ %>
<div class="center_div_channel commentaire">
    <form data-toggle="validator" method="post" action="/comment/add/<%= channel.channelId %>">
        <div class="form-group">
            <label for="content">Tag name</label>
            <input type="textarea" class="form-control" id="content" placeholder="Comment" name="content">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


<% for(let i = 0; i<comments.length && i<10; i++){ %>
    <h1><%= comments[i].pseudo_user %></h1>
    <p><%= comments[i].content %></p>
<% }%>
</div>
<% } %>
